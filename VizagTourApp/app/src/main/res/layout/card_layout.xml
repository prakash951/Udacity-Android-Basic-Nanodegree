<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    style="@style/cardView"
    card_view:cardElevation="@dimen/value_5dp"
    card_view:contentPadding="@dimen/value_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/restaurant_image"
            style="@style/image"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/kamat_restaurant" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/fab_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restaurant_text"
                style="@style/PlaceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restaurant1" />

            <TextView
                android:id="@+id/restaurant_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restaurant1address" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
